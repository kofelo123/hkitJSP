<script>
	function check(){
		with(document.insertForm){
			if(name.value.length == 0){
				alert("이름은 반드시 입력해야 합니다.");
				name.focus();
				return false;
				}
			if(phonenum.value.length == 0){
				alert("전화번호는 반드시 입력해야 합니다.");
				phonenum.focus();
				return false;
				}
			if(birthday.value.length == 0){
				alert("생일은 반드시 입력해야 합니다.");
				birth.focus();
				return false;
				}
			document.insertForm.submit();			
			}
		}
</script>
